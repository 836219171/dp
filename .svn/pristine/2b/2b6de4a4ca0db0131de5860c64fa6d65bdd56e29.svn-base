
    .mdjfajly {
        position: relative;
        margin: 0 auto;
        // padding: 10px;
        width: 100%;
        height: 190px;
        box-sizing: border-box;
        font-family: "impact";
        .middle {
            margin: 0 auto;
            width: 100%;
            height: 100%;
            // padding: 30px 0;
            box-sizing: border-box;
            .first {
                position: relative;
                margin: 0 auto;
                width: 150px;
                height: 90px;
                .ball {
                    position: absolute;
                    top: 18px;
                    left: 0;
                    bottom: 0;
                    right: 0;
                    margin: auto;
                    width: 88px;
                    height: 88px;
                    background: url("../../../img/mdjfajly-1.png") no-repeat center;
                    background-size: 100% 100%;
                    z-index: 1;
                    animation: myfirst 4s infinite linear;
                    span {
                        display: inline-block;
                        width: 100%;
                        line-height: 79px;
                        text-align: center;
                        vertical-align: middle;
                        font-size: 14px;
                        color: #fff;
                    }
                    .span-a {
                        line-height: 60px;
                    }
                    .span-b {
                        line-height: 95px;
                    }
                }
                .first-a { 
                    width: 60px;
                    height: 60px;
                    background: url("../../../img/mdjfajly-3.png") no-repeat center;
                }
                .first-b {
                    width: 95px;
                    height: 95px;
                    background: url("../../../img/mdjfajly-2.png") no-repeat center;
                }
                .line {
                    position: absolute;
                    top: 20px;
                    left: 80px;
                    bottom: 0;
                    right: 0;
                    margin: auto;
                    min-width: 54px;
                    height: 22px;
                    background: url("../../../img/mdjfajly-4.png") no-repeat center;
                    span {
                        display: inline-block;
                        padding: 3px 0 0 71px;
                        min-width: 30px;
                        white-space: nowrap;
                        color: #fff;
                        font-size: 16px;
                    }
                }
            }
            .second {
                position: relative;
                margin: 0 0 0 95px;
                float: left;
                width: 150px;
                height: 90px;
                // border: 1px solid red;
                // clear: both;
                .ball {
                    position: absolute;
                    top: 0;
                    left: 0;
                    bottom: 0;
                    right: 0;
                    margin: auto;
                    width: 149px;
                    height: 149px;
                    background: url("../../../img/mdjfajly-2.png") no-repeat center;
                    background-size: 100% 100%;
                    z-index: 1;
                    animation: myfirst 6s infinite linear;
                    span {
                        display: inline-block;
                        width: 100%;
                        line-height: 119px;
                        text-align: center;
                        vertical-align: middle;
                        font-size: 15px;
                        color: #fff;
                    }
                    .span-a {
                        line-height: 40px;
                    }
                    .span-b {
                        line-height: 60px;
                    }
                }
                .first-a { 
                    width: 40px;
                    height: 40px;
                    background: url("../../../img/mdjfajly-1.png") no-repeat center;
                }
                .first-b {
                    width: 60px;
                    height: 60px;
                    background: url("../../../img/mdjfajly-3.png") no-repeat center;
                }
                .line {
                    position: absolute;
                    top: -12px;
                    left: -110px;
                    bottom: 0;
                    right: 0;
                    margin: auto;
                    width: 54px;
                    height: 22px;
                    background: url("../../../img/mdjfajly-5.png") no-repeat center;
                    span {
                        display: inline-block;
                        margin: 3px 0 0 -77px;
                        min-width: 30px;
                        white-space: nowrap;
                        color: #fff;
                        font-size: 16px;
                    }
                }
            }
            @keyframes myfirst {
                0% {transform: translateX(0px)}
                25% {transform: translateX(-5px)}
                50% {transform: translateX(0px)}
                75% {transform: translateX(5px)} 
                100% {transform: translateX(0px)} 
            }
            .three {
                position: relative;
                margin: 0 80px 0 0;
                float: right;
                width: 150px;
                height: 90px;
                // border: 1px solid red;
                // clear: both;
                .ball {
                    position: absolute;
                    top: 0;
                    left: 0;
                    bottom: 0;
                    right: 0;
                    margin: auto;
                    width: 100px;
                    height: 100px;
                    background: url("../../../img/mdjfajly-3.png") no-repeat center;
                    background-size: 100% 100%;
                    z-index: 1;
                    animation: myfirst 5s infinite linear;
                    span {
                        display: inline-block;
                        width: 100%;
                        line-height: 85px;
                        text-align: center;
                        vertical-align: middle;
                        font-size: 15px;
                        color: #fff;
                    }
                    .span-a {
                        line-height: 40px;
                    }
                    .span-b {
                        line-height: 95px;
                    }
                }
                .first-a { 
                    width: 40px;
                    height: 40px;
                    background: url("../../../img/mdjfajly-1.png") no-repeat center;
                }
                .first-b {
                    width: 95px;
                    height: 95px;
                    background: url("../../../img/mdjfajly-2.png") no-repeat center;
                }
                .line {
                    position: absolute;
                    top: 5px;
                    left: 80px;
                    bottom: 0;
                    right: 0;
                    margin: auto;
                    width: 54px;
                    height: 21px;
                    background: url("../../../img/mdjfajly-4.png") no-repeat center;
                    span {
                        display: inline-block;
                        padding: 3px 0 0 62px;
                        min-width: 30px;
                        white-space: nowrap;
                        color: #fff;
                        font-size: 16px;
                    }
                }
            }
        }
    }