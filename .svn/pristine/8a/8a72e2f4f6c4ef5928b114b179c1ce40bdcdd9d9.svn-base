#tomcat端口
server.port=8150
server.tomcat.uri-encoding=UTF-8


#是否开放tomcat日志
server.tomcat.accesslog.enabled=false
server.tomcat.accesslog.buffered=true
#server.tomcat.accesslog.directory=D:/data-service/logs/tomcat/
server.tomcat.accesslog.directory=F:/dp/logs/tomcat/
server.tomcat.accesslog.prefix=access_log
server.tomcat.accesslog.suffix=.log


spring.http.encoding.force=true
spring.http.encoding.charset=UTF-8
spring.http.encoding.enabled=true


#************* 数据源1  *************
spring.datasource.db1.type=com.alibaba.druid.pool.DruidDataSource
spring.datasource.db1.url=jdbc:mysql://192.168.8.102:3306/zj_odr?characterEncoding=utf-8&&useSSL=false
spring.datasource.db1.driverClassName=com.mysql.jdbc.Driver
spring.datasource.db1.username=root
spring.datasource.db1.password=root
spring.datasource.db1.maxWait=600000
spring.datasource.db1.initialSize=10
spring.datasource.db1.minIdle=10
spring.datasource.db1.maxActive=100

#借出连接时不要测试，否则很影响性能
spring.datasource.db1.testOnBorrow=false          
spring.datasource.db1.validationQuery="SELECT 1"
#指明连接是否被空闲连接回收器(如果有)进行检验.如果检测失败,则连接将被从池中去除.
spring.datasource.db1.testWhileIdle=true    
#每30秒运行一次空闲连接回收器
spring.datasource.db1.timeBetweenEvictionRunsMillis=30000   
#池中的连接空闲30分钟后被回收
spring.datasource.db1.minEvictableIdleTimeMillis=1800000  
#在每次空闲连接回收器线程(如果有)运行时检查的连接数量，建议设置和maxActive一样大，这样每次可以有效检查所有的链接
spring.datasource.db1.numTestsPerEvictionRun=100  

#连接泄漏回收参数，当可用连接数少于3个时才执行
spring.datasource.db1.removeAbandoned=true      
#连接泄漏回收参数，180秒，泄露的连接可以被删除的超时值
spring.datasource.db1.removeAbandonedTimeout=180    

#web前端域名（用于前后分离部署的分布式环境下）
bm.dataservice.page.domain=localhost
bm.dataservice.page.port=8150


